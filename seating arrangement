l = [1, 0, 1, 0, 0, 0, 0, 0, 1, 1, 0, 0]

# l =  [1, 0, 0, 0, 0, 1]

count = 0
for i in range(2,len(l)-2):
    if l[i] == 0 and l[i-2]==0 and l[i-1] == 0 and l[i+1]==0 and l[i+2]==0:
        print(i)
        count += 1
        l[i]=1
if l[0]==0 and l[1]==0 and l[1]==0:
    count += 1
    l[0]=1
if l[-2]==0 and l[-3]==0 and l[-4]==0 and l[-1]==0:
    count += 1
    l[-2]=1
if l[-1]==0 and l[-2]==0 and l[-3]==0:
    count +=1

print(count)
